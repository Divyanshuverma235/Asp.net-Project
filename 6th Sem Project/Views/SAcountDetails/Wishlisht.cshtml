<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist - CodeSavvy</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .wishlist-container {
            max-width: 900px;
            margin: auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .course-item {
            display: flex;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

            .course-item img {
                width: 120px;
                height: 80px;
                border-radius: 5px;
            }

        .course-details {
            flex: 1;
            margin-left: 15px;
        }

        .remove-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .price {
            font-size: 18px;
            font-weight: bold;
            color: #f39c12;
        }

        .summary-card {
            background: #000;
            color: white;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
        }

        .buy-now {
            background: gold;
            border: none;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            border-radius: 5px;
        }

        .sidebar {
            width: 250px;
            background-color: #f9f6e6;
            height: 100vh;
            position: fixed;
            padding: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                text-decoration: none;
                color: black;
                margin-bottom: 5px;
            }

                .sidebar a.active, .sidebar a:hover {
                    background-color: gold;
                    border-radius: 5px;
                }

        .content {
            margin-left: 270px;
            padding: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar Navigation Menu -->
    <div class="sidebar">
        <a asp-controller="SAcountDetails" asp-action="Index" class="active">
            <i class="fa fa-user"></i> My Profile
        </a>

        <a asp-controller="SAcountDetails" asp-action="EnrolledCourses">
            <i class="fa fa-book"></i> Enrolled Courses
        </a>

        <a asp-controller="SAcountDetails" asp-action="Wishlisht">
            <i class="fa fa-heart"></i> Wishlist
        </a>

        @* <a asp-controller="SAcountDetails" asp-action="Index">Courses</a> *@ 
       <a asp-controller="SAcountDetails" asp-action="Settings">
            <i class="fa fa-cog"></i> Settings
        </a>

        <a asp-controller="Auth" asp-action="Logout">
            <i class="fa fa-sign-out-alt"></i> Log Out
        </a>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <h3>My Wishlist</h3>
        <p>3 Courses in Wishlist</p>

        <div class="wishlist-container">
            <!-- Course 1 -->
            <div class="course-item">
                <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
                <div class="course-details">
                    <a href="#" class="text-decoration-none text-dark fw-bold">The Complete Python Bootcamp From Zero to Hero in Python</a>
                    <p class="mb-1">4.5 ⭐⭐⭐⭐⭐ (Review Count)</p>
                    <p>Total Courses • Lesson • Beginner</p>
                </div>
                <p class="price">Rs. 1,700</p>
                <button class="remove-btn">🗑 Remove</button>
            </div>

            <!-- Course 2 -->
            <div class="course-item">
                <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
                <div class="course-details">
                    <a href="#" class="text-decoration-none text-dark fw-bold">The Complete Python Bootcamp From Zero to Hero in Python</a>
                    <p class="mb-1">4.5 ⭐⭐⭐⭐⭐ (Review Count)</p>
                    <p>Total Courses • Lesson • Beginner</p>
                </div>
                <p class="price">Rs. 2,100</p>
                <button class="remove-btn">🗑 Remove</button>
            </div>

            <!-- Course 3 -->
            <div class="course-item">
                <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
                <div class="course-details">
                    <a href="#" class="text-decoration-none text-dark fw-bold">The Complete Python Bootcamp From Zero to Hero in Python</a>
                    <p class="mb-1">4.5 ⭐⭐⭐⭐⭐ (Review Count)</p>
                    <p>Total Courses • Lesson • Beginner</p>
                </div>
                <p class="price">Rs. 2,000</p>
                <button class="remove-btn">🗑 Remove</button>
            </div>

            <!-- Summary Card -->
            <div class="summary-card mt-3">
                <p>Total:</p>
                <h4>Rs. 4,500</h4>
                <p style="text-decoration: line-through; color: gray;">Rs. 5,560</p>
                <button class="buy-now">Buy Now</button>
            </div>
        </div>
    </div>

</body>
</html>
