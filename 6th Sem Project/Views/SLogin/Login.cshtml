@{
    ViewData["Title"] = "Login";
}

<body style="background:black;">
    <div style="display: flex; justify-content: center; align-items: center; gap: 50px;">
        <!-- Form -->
        <div style="width: 400px; background: rgba(0, 8, 20); padding: 20px; border-radius: 10px; border: 1px solid #ffcc00; color: white; box-shadow: 0 0 15px rgba(255, 255, 255, 0.2); position: relative; margin-top: 100px;">

            <!-- Toggle Switch -->
            <div style="display: flex; background: #161D29; border-radius: 25px; padding: 5px; width: 100%; margin-bottom: 15px;">
                <div id="student-tab" onclick="toggleUserType('student')" style="flex: 1; text-align: center; padding: 10px; background: #000814; border-radius: 20px; color: white; font-weight: bold; cursor: pointer;">Student</div>

                <!-- Instructor Button -->
                <div id="instructor-tab" onclick="redirectToInstructorPage()" style="flex: 1; text-align: center; padding: 10px; color: #b0b3b8; cursor: pointer;">Instructors</div>
            </div>

            <div>Email Address*</div>
            <input type="email" placeholder="Enter email address" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <div>Password*</div>
            <input type="password" placeholder="Enter password" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">
            f
            <!-- Forgot Password Link -->
            <div style="text-align: right; font-size: 14px; color: #ffcc00; cursor: pointer; margin-bottom: 10px;">Forgot Password?</div>

            <div style="width: 100%; padding: 10px; background: #ffcc00; font-size: 16px; font-weight: bold; border-radius: 5px; cursor: pointer; margin-top: 10px; text-align: center;">Login</div>

            <!-- Sign-up Redirect -->
            <div style="text-align: center; margin-top: 10px; font-size: 14px;">
                <span>Don't have an account? </span>
                <a href="Signup.cshtml" style="color: #ffcc00; text-decoration: none; font-weight: bold;">Sign up</a>
            </div>
        </div>

        <!-- Animation -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.8/lottie.min.js"></script>
        <div id="animation-container" style="width: 50%; height: 100%; margin-left: -50px;"></div>
        <script>
            var animation = lottie.loadAnimation({
                container: document.getElementById('animation-container'),
                renderer: 'svg',
                loop: true,
                autoplay: true,
                path: 'https://lottie.host/YOUR_JSON_URL_HERE.json' // यहां सही JSON लिंक डालें
            });
        </script>
    </div>

    <!-- Toggle Switch Script -->
    <script>
        function toggleUserType(type) {
            if (type === 'student') {
                document.getElementById('student-tab').style.background = '#000814';
                document.getElementById('student-tab').style.color = 'white';
                document.getElementById('instructor-tab').style.background = 'transparent';
                document.getElementById('instructor-tab').style.color = '#b0b3b8';
            }
        }

        function redirectToInstructorPage() {
            window.location.href = "instructor.html"; // अपनी सही पेज लिंक डालें
        }
    </script>
</body>


